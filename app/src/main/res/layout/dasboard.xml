<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Dasboard">

    <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:gravity="right"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            <TextView
                    android:gravity="left"
                    android:textColor="#eee"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:text="DASHBOARD"
                    android:layout_width="320dp" android:layout_height="match_parent"></TextView>

            <ImageButton
                    android:src="@drawable/exit"
                    android:layout_width="50dp" android:layout_height="match_parent"></ImageButton>
        </LinearLayout>

        <LinearLayout
                android:paddingLeft="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp">
            <Button
                    android:layout_gravity="center_vertical"
                    android:text="List Jadwal"
                    android:background="@drawable/btn_secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Button>

        </LinearLayout>

        <LinearLayout
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@drawable/bg_dashboard"
                android:layout_width="370dp"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <TextView
                        android:textSize="18sp"
                        android:text="Title : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                </TextView>
                <EditText
                        android:hint="Judul kegiatan"
                        android:inputType="text"
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                </EditText>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <TextView
                        android:textSize="18sp"
                        android:text="Date : "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                </TextView>
                <DatePicker
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp">

                </DatePicker>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="270dp">
                <TextView
                        android:textSize="18sp"
                        android:text="Description : "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                </TextView>

                <EditText
                        android:id="@+id/description"
                        android:minLines="3"
                        android:scrollbarAlwaysDrawVerticalTrack="true"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="250dp">

                </EditText>


            </LinearLayout>
            <Button
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:text="Buat Jadwal"
                    android:background="@drawable/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Button>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>